<?xml version='1.0' encoding='utf-8'?>
<widget id="com.proj.thewjc" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>THE WJC</name>
    <description>
        THE WJC mobile app
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Ecrubit
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" /> 
    <plugin name="org.li8.inappbrowser" spec="0.1" source="pgb" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>

	<icon src="icons/icon.png" gap:platform="ios" width="57" height="57" />
	<icon src="icons/icon-72.png" gap:platform="ios" width="72" height="72" />
	<icon src="icons/icon-76.png" gap:platform="ios" width="76" height="76" />
	<icon src="icons/icon_at_2x.png" gap:platform="ios" width="114" height="114" />
	<icon src="icons/icon-72_at_2x.png" gap:platform="ios" width="144" height="144" />
	<icon src="icons/icon-120.png" gap:platform="ios" width="120" height="120" />
	<icon src="icons/icon-76_at_2x.png" gap:platform="ios" width="152" height="152" />

	<access origin="*" subdomains="true"/>
	<allow-navigation href="*" />
	<preference name="Orientation" value="portrait" /> 
</widget>
